<h2><%= @snippet.title %></h2>
<h3>Code: (<%= @snippet.code_type %>)</h3>
<div class="code">
  <% if @kind == :markdown %>
    <%= markdown @highlightme %>
  <% else %>
    <pre class="highlight solarized-dark block">
      <%= render("code_sample", language: @kind) %>
    </pre>
  <% end %>
</div>
