<h1>Create a new snippet</h1>

<%#= markdown(@snippet.title) %>
<%= form_for @snippet do |f| %>
  <div>
    <%= f.collection_select :code_type,  @code_types, :to_s, :to_s, include_blank: false%>
  </div>
  <div>
    <%= f.label :title %>:
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :work %>:<br>
    <%= f.text_area :work %>
  </div>
  <%= f.submit "Done" %>
<% end %>
